@{
    ViewBag.Title = "WADADO.IN";
}
<!--SLIDER REFERENCE-->
<script src="~/Scripts/slider/jssor.js"></script>
<script src="~/Scripts/slider/jssor.slider.js"></script>
<script src="~/Scripts/slider/slider.js"></script>

<!--UI SELECT REFERENCE-->
<link href="~/Content/ui-select/select.css" rel="stylesheet" />
<link href="~/Content/ui-select/select2.css" rel="stylesheet" />
<link href="~/Content/ui-select/select2-bootstrap.css" rel="stylesheet" />

<script src="~/Scripts/Video/video.js"></script>
<script src="~/Scripts/angular-ui/ui-select/select.js"></script>
<!--SEARCH REFERENCE-->
<script src="~/Scripts/Common/services/SearchDataService.js"></script>
<script src="~/Scripts/Common/controllers/SearchController.js"></script>
<!--ACCOUNT REFERENCE-->
<script src="~/Scripts/Login/Model/AccountLoginModel.js"></script>
<script src="~/Scripts/Login/services/LoginDataService.js"></script>
<script src="~/Scripts/Login/controllers/LoginController.js"></script>

<!--MENU REFERENCE-->
<script src="~/Scripts/Common/services/MenuDataService.js"></script>
<script src="~/Scripts/Common/controllers/MenuController.js"></script>
<link href="~/Content/mobilemenu.css" rel="stylesheet" />

<script src="~/Scripts/Location/services/LocationDataService.js"></script>
<script src="~/Scripts/Location/controllers/LocationController.js"></script>
<link href="~/Content/phone.css" rel="stylesheet" />
<div id="colorbar">
</div>
<div class="cover"></div>
<div id="contentWrapper" data-ng-controller="LocationController">
    <div>
        @Html.Partial("../Partial/_search")
    </div>
    <div>
        @Html.Partial("../Partial/_mobilemenu")
    </div>
    <div class="uppercontent">
        <section>
            <div id="imageWrapper">
                <img class="location-image" ng-src="{{location.SelectedLocation.LocationImage}}" />
                <div class="location">
                    <div>
                        <span>{{location.SelectedLocation.LocationName}}</span>
                    </div>
                </div>
            </div>
            <div class="location-holder">
                <!--Row start-->
                <div class="row">
                    <div class="caption">
                        <span>Best Time To Visit</span>
                    </div>
                </div>
                <!--Row end-->
                <!--Row start-->
                <div class="row">
                    <div class="column-12">
                        <div class="center-element">
                            <div class="bestMonthsToVisitWrapper" ng-cloak>
                                <div ng-repeat="item in location.BestMonthsToVisit" class="bestMonthsToVisitWrapper item">
                                    <div ng-if="$index < 5">
                                        <div>
                                            <span>{{item}}</span>
                                        </div>
                                        <div style="border-right:1px solid #747678;padding:0 1em;float:right;height:.5em;margin-top:-.5em;"></div>
                                    </div>
                                    <div ng-if="$index == 5">
                                        <div>
                                            <span>{{item}}</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="monthseperator-top"></div>
                        <div class="center-element">
                            <div class="bestMonthsToVisitWrapper" ng-cloak>
                                <div ng-repeat="item in location.BestMonthsToVisit" class="bestMonthsToVisitWrapper litem">
                                    <div ng-if="$index > 5 && $index < 11">
                                        <div>
                                            <span>{{item}}</span>
                                        </div>
                                        <div style="border-right:1px solid #747678;padding:0 1em;float:right;height:.5em;margin-top:-1em;"></div>
                                    </div>
                                    <div ng-if="$index == 11">
                                        <div class="item">
                                            <span>{{item}}</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--Row end-->
                </div>
                <!--Row end-->
            </div>
        </section>
        <!--Row start-->
        <div class="row" ng-cloak>
            <div ng-repeat="item in location.AllActivities">
                <div class="column-6">
                    <div class="location-activity-wrapper" ng-click="getAllSelectedActivities(item)">
                        <div>
                            <img ng-src="{{Root}}/{{item.ImageURL}}" />
                        </div>
                        <div class="activityCategoryDetails">
                            <div>
                                <span>{{item.ActivityCount}}</span>
                            </div>
                            <div>
                                <span>{{item.ActivityName}}</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--Row end-->
    </div>
</div>
