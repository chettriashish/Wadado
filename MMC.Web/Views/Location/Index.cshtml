<!--SLIDER REFERENCE-->
<script src="~/Scripts/slider/owl.carousel.min.js"></script>
<link href="~/Content/owl.carousel.css" rel="stylesheet" />
<link href="~/Content/animate.css" rel="stylesheet" />

<script src="~/Scripts/Location/services/LocationDataService.js"></script>
<script src="~/Scripts/Location/controllers/LocationController.js"></script>

<!--FAVOURITES REFERENCE-->
<script src="~/Scripts/Common/services/FavoritesDataService.js"></script>
<script src="~/Scripts/Directives/Favorites/favoritesdirective.js"></script>

<!--MENU REFERENCE-->
<script src="~/Scripts/Common/services/MenuDataService.js"></script>
<script src="~/Scripts/Common/controllers/MenuController.js"></script>

<script src="~/Scripts/Location/services/LocationDataService.js"></script>
<script src="~/Scripts/Location/controllers/LocationController.js"></script>

<script src="~/Scripts/Activities/services/ActivityDataService.js"></script>
<script src="~/Scripts/Activities/controllers/ActivityController.js"></script>
<link href="~/Content/tablet.css" rel="stylesheet" />
<link href="~/Content/desktopmenu.css" rel="stylesheet" />
<link href="~/Content/desktop.css" rel="stylesheet" />

<div id="colorbar">
</div>
<div class="cover"></div>
<div id="contentWrapper" data-ng-controller="LocationController">
    <div>
        @Html.Partial("../Partial/_desktopmenu")
    </div>
    <div class="uppercontent">
        <section>
            <div id="imageWrapper">
                <div class="cover-height">
                    <img class="location-image" ng-src="{{location.ImageURL}}" />
                    <div class="location">
                        <div ng-cloak>
                            <span>{{location.LocationName}}</span>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!--Row start-->
        <div class="row" ng-cloak>
            <div class="column-12 wide-gutter">
                <div class="column-0 ">
                    <img ng-src="{{ActivityIcon}}" />
                </div>
                <div class="column-6 ">
                    <div class="subHeader">
                        <span>{{ActivityType}}</span>
                    </div>
                </div>
            </div>
        </div>
        <!--Row end-->
        <div class="row" ng-show="location != null">
            <div class="column-12 wide-gutter" ng-cloak>
                &nbsp;
            </div>
        </div>
        <!--Row start-->
        <div class="row" ng-show="location != null">
            <div class="column-12 wide-gutter" ng-cloak>
                <div class="column-0">
                    <img src="~/Images/Icons/offer_icon_mobile.png" />
                </div>
                <div class="column-6">
                    <div class="subHeader">
                        <span>Top Offers in {{location.LocationName}}</span>
                    </div>
                </div>
            </div>
        </div>
        <!--Row end-->
        <!-- Slider Begin -->
        <div class="row">
            <div class="column-12 wide-gutter">
                <div class="owl-carousel">
                    <div ng-repeat="item in location.TopOffersForLocation">
                        <div class="imageDiscountLabel" ng-show="item.Discount > 0">
                            <div>
                                <div>
                                    <span>{{item.Discount}}%</span>
                                </div>
                                <div stye="position:absolute;width:100%;">
                                    <span>Off</span>
                                </div>
                            </div>
                        </div>
                        <div class="rightDiv">
                            <div class="like-container">
                                <nds-favorites entity-key="item.Key" type="item.OfferType"></nds-favorites>
                            </div>
                        </div>
                        <div class="crop-height" data-ng-click="loadActivityDetails(item)">
                            <img ng-src="{{item.ImageURL}}" data-ng-click="" style="width:100%;" />
                        </div>
                        <div class="image-noPaddingDiv">
                            <div class="leftDiv">
                                <div>
                                    <p><span>{{item.Value}}</span></p>
                                </div>
                                <div class="ratingList" id="userRating">
                                    <div ng-repeat="imageItem in item.ratingURL track by $index">
                                        <img ng-src="{{imageItem}}" />
                                    </div>
                                </div>
                            </div>
                            <div class="rightDiv">
                                <span>
                                    {{item.Currency}} {{item.Cost}}
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Slider End -->
        <!--row begin-->
        <div class="row" ng-show="location != null">
            <div class="column-12 wide-gutter">
                <div class="header-left">
                    <!--JS APPEND-->
                </div>
            </div>
        </div>
        <div class="row" ng-show="location != null">
            <div class="column-12 wide-gutter" ng-cloak>
                <div class="column-4">
                    <div class="column-header">
                        {{location.LocationName}} details
                    </div>
                    <div>
                        <span>{{location.Description}}</span>
                    </div>
                </div>
                <div class="column-4">
                    <div class="column-header">Getting Around</div>
                    <div><span>{{location.GettingAround}}</span></div>
                </div>
                <div class="column-4">
                    <div class="column-header">
                        Must Eat
                    </div>
                    <div>
                        <span>{{location.MustEat}}</span>
                    </div>
                    <br />
                    <div class="column-header">
                        Must Drink
                    </div>
                    <div>
                        <span>{{location.MustDrink}}</span>
                    </div>
                </div>
            </div>
            <!--row end-->
        </div>
        <!--Row end-->
        <!--Row start-->
        <div class="row" ng-show="location != null">
            <div class="column-12 wide-gutter" ng-cloak>
                &nbsp;
            </div>
            <div data-ng-controller="ActivityController" class="column-12 wide-gutter" ng-cloak>
                <div class="row" ng-show="location != null">
                    <div ng-cloak data-ng-controller="SearchController" class="column-12">
                        <div class="content-nav">
                            <div>
                                <div><span>{{ActivityType}}</span></div>
                                <div class="bottom-triangle"></div>
                            </div>
                            <div class="row">
                                <div>
                                    <ul>
                                        <li ng-repeat="(key, value) in activityResults">
                                            <ul>
                                                <li ng-repeat="item in value">
                                                    <a ng-click="loadInLocationSelectedActivityCategory(key)">{{item.ActivityCategory}}</a>
                                                </li>
                                            </ul>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>                        
                    </div>
                </div>
                <!--Row end-->
                <!--Row start-->
                <div class="row" ng-cloak>
                    <div class="column-12 widest-gutter">
                        <div ng-repeat="item in allSelectedActivity">
                            <div class="column-4 min" ng-if="largeScreen">
                                <div class="image-container">
                                    <div class="imageDiscountLabel" ng-show="item.Discount > 0">
                                        <div>
                                            <div>
                                                <span>{{item.Discount}}%</span>
                                            </div>
                                            <div>
                                                <span>Off</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="rightDiv">
                                        <div class="like-container">
                                            <nds-favorites entity-key="item.ActivityKey" type="ACTIVITY"></nds-favorites>
                                        </div>
                                    </div>
                                    <div class="crop-height" ng-click="loadActivityDetails(item)">
                                        <img ng-src="{{item.DefaultImageURL}}" style="width:100%;" />
                                    </div>
                                    <div class="image-noPaddingDiv">
                                        <div class="leftDiv">
                                            <div>
                                                <p><span>{{item.ActivityName}}</span></p>
                                            </div>
                                            <div class="ratingList" id="userRating">
                                                <div ng-repeat="imageItem in item.ratingURL track by $index">
                                                    <img ng-src="{{imageItem}}" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="rightDiv">
                                            <div class="rightDiv">
                                                <span>
                                                    {{item.Currency}} {{item.Cost}}
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="column-6 min" ng-if="!largeScreen">
                                <div class="image-container">
                                    <div class="imageDiscountLabel" ng-show="item.Discount > 0">
                                        <div>
                                            <div>
                                                <span>{{item.Discount}}%</span>
                                            </div>
                                            <div>
                                                <span>Off</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="rightDiv">
                                        <div class="like-container">
                                            <nds-favorites entity-key="item.ActivityKey" type="ACTIVITY"></nds-favorites>                                            
                                        </div>
                                    </div>
                                    <div class="crop-height" ng-click="loadActivityDetails(item)">
                                        <img ng-src="{{item.DefaultImageURL}}" />
                                    </div>
                                    <div class="image-noPaddingDiv">
                                        <div class="leftDiv">
                                            <div>
                                                <p><span>{{item.ActivityName}}</span></p>
                                            </div>
                                            <div class="ratingList" id="userRating">
                                                <div ng-repeat="imageItem in item.ratingURL track by $index">
                                                    <img ng-src="{{imageItem}}" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="rightDiv">
                                            <span>
                                                {{item.Currency}} {{item.Cost}}
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--Row end-->
            </div>
        </div>        
    </div>
</div>
