<link href="~/Content/phone.css" rel="stylesheet" />
<link href="~/Content/_date.css" rel="stylesheet" />
<div id="colorbar">
</div>
<div class="cover"></div>
<div class="contentWrapper" data-ng-controller="ActivityDetailsController">
    <div>
        @Html.Partial("../Partial/_search")
    </div>
    <div>
        @Html.Partial("../Partial/_mobilemenu")
    </div>
    <div class="uppercontent" ng-show="showActivityDetails()" ng-hide="hideActivityDetails()">
        <div>
            <div class="owl-carousel" id="activityImages">
                <div ng-repeat="item in selectedActivityDetails.ActivityImagesURL" class="crop-height" ng-cloak>
                    <img u="image" ng-src="{{item}}">
                </div>
            </div>
            <!--Row end-->
            <!--Row start-->
            <div class="row">
                <div class="column-12">
                    <!--ACTIVITY NAME AND OTHER DETAILS-->
                    <div class="header-left">
                        <!--JS APPEND-->
                    </div>
                </div>
            </div>
            <!--Row end-->
            <!--Row start-->
            <div class="row" ng-cloak>
                <div class="column-12">
                    <div class="column-0">
                        <img src="~/Images/Icons/location_nav.png" />
                    </div>
                    <div class="column-9">
                        <div class="location-details">
                            <span>{{selectedActivityDetails.Location}}</span>
                        </div>
                    </div>
                </div>
            </div>
            <!--Row end-->
            <!--Row start-->
            <div class="row" ng-cloak>
                <div class="column-12">
                    <div class="column-0">
                        <img src="~/Images/Icons/time_duration_web.png" />
                    </div>
                    <div class="column-3">
                        <div class="location-details">
                            <span>{{selectedActivityDetails.Duration}}</span>
                        </div>
                    </div>
                    <div class="column-0">
                        <img src="~/Images/Icons/people_web.png" />
                    </div>
                    <div class="column-3">
                        <div class="location-detailsSpace">
                            <span>{{NumberOfPeople}}</span>
                        </div>
                    </div>
                </div>
            </div>
            <!--Row end-->
            <!--Row start-->
            <div class="row" ng-cloak>
                <div class="column-12">
                    <div class="column-6">
                        <div class="subHeader">
                            <span>
                                Description
                            </span>
                        </div>
                    </div>
                    <div class="column-6">
                        <div class="label">
                            <span>{{Cost}}</span>
                        </div>
                    </div>
                </div>
            </div>
            <!--Row end-->
            <!--Row start-->
            <div class="row" ng-cloak>
                <div class="column-12">
                    <div>
                        <span>
                            {{selectedActivityDetails.Description | limitTo:limit}}
                        </span>
                    </div>
                </div>
                <div class="column-12">
                    <div class="column-1">
                        <div class="buttonNoBorder">
                            <a ng-click="showMore()">{{descriptionAction}}</a>
                        </div>
                    </div>
                </div>
            </div>
            <!--Row end-->
            <!--Row start-->
            <div class="row" ng-cloak>
                <div class="rating-outer">
                    <div class="column-12">
                        <div class="column-6 border">
                            <div class="center-element">
                                <div class="subHeaderCenter">
                                    <span>User Rating</span>
                                </div>
                            </div>
                        </div>
                        <div class="column-6">
                            <div class="center-element">
                                <div class="subHeaderCenter">
                                    <span>Difficulty level</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="column-12">
                        <div class="column-6">
                            <div class="center-element">
                                <div class="rating" id="userRating">
                                    <div></div>
                                </div>
                            </div>
                        </div>
                        <div class="column-6">
                            <div class="center-element">
                                <div class="rating" id="diffRating">
                                    <div><span>Professional</span></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--Row end-->
            <!--Row start-->
            <div class="row" ng-cloak>
                <div class="column-12">
                    <div class="column-12">
                        <div class="subHeader">
                            <span>
                                Cancellation Policy
                            </span>
                        </div>
                    </div>
                    <div>
                        <span>
                            {{selectedActivityDetails.CancellationPolicy}}
                        </span>
                    </div>
                </div>
            </div>
            <!--Row end-->
            <!--Row start-->
            <div class="row">
                <div class="column-12">
                    <div ng-controller="BookingController">
                        @Html.Partial("../Partial/_booking")
                    </div>
                </div>
            </div>
            <!--Row end-->
        </div>
        <!--Row start-->
        <div class="row">
            <div class="column-12">
                <div class="column-12">
                    <div class="subHeader">
                        <span>
                            Similar Activities
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <!--end row-->
        <!--start row-->
        <div class="column-12 top">
            <div class="owl-carousel" id="similarActivityImages" ng-if="greaterThan">
                <div ng-repeat="item in selectedActivityDetails.SimilarActivities" class="crop-height" ng-cloak>
                    <div class="imageDiscountLabel" ng-show="item.Discount > 0">
                        <div>
                            <div>
                                <span>{{item.Discount}}%</span>
                            </div>
                            <div stye="position:absolute;width:100%;">
                                <span>Off</span>
                            </div>
                        </div>
                    </div>
                    <div class="rightDiv">
                        <div class="like-container">
                            <nds-favorites entity-key="item.ActivityKey" type="ACTIVITY"></nds-favorites>
                        </div>
                    </div>
                    <div class="crop-height" ng-cloak>
                        <img ng-src="{{item.ImageURL}}" />
                    </div>
                    <div class="image-noPaddingDiv">
                        <div class="leftDiv">
                            <div>
                                <p><span>{{item.ActivityName}}</span></p>
                            </div>
                            <div class="ratingList" id="userRating">
                                <div ng-repeat="imageItem in item.ratingURL track by $index">
                                    <img ng-src="{{imageItem}}" />
                                </div>
                            </div>
                        </div>
                        <div class="rightDiv">
                            <span>
                                {{item.Currency}} {{item.Cost}}
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <div ng-repeat="item in selectedActivityDetails.SimilarActivities"
                 ng-cloak ng-if="greaterThan == false">
                <div class="image-container">
                    <div class="imageDiscountLabel" ng-show="item.Discount > 0">
                        <div>
                            <div>
                                <span>{{item.Discount}}%</span>
                            </div>
                            <div stye="position:absolute;width:100%;">
                                <span>Off</span>
                            </div>
                        </div>
                    </div>
                    <div class="rightDiv">
                        <div class="like-container">
                            <nds-favorites entity-key="item.ActivityKey" type="ACTIVITY"></nds-favorites>
                        </div>
                    </div>
                    <div class="crop-height" ng-click="loadActivityDetails(item)">
                        <img ng-src="{{item.DefaultImageURL}}" ng-click="" style="width:100%;" />
                    </div>
                    <div class="image-noPaddingDiv">
                        <div class="leftDiv">
                            <div>
                                <p><span>{{item.ActivityName}}</span></p>
                            </div>
                            <div class="ratingList" id="userRating">
                                <div ng-repeat="imageItem in item.ratingURL track by $index">
                                    <img ng-src="{{imageItem}}" />
                                </div>
                            </div>
                        </div>
                        <div class="rightDiv">
                            <span>
                                {{item.Currency}} {{item.Cost}}
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--end row-->
    </div>
</div>


