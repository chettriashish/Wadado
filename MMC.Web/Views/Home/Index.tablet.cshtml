<div class="cover"></div>
<div>
    @Html.Partial("../Partial/_homemobilemenu")
</div>

<div class="contentWrapper" data-ng-controller="HomeController">
    <div>
        @Html.Partial("../Partial/_search")
    </div>
    <section class="cd-hero">
        <ul class="cd-hero-slider">
            <li class="selected">
                <div class="row">
                    <div class="column-12">
                        <div class="cd-full-width">
                            <div class="home-search-content">
                                <div>
                                    <h2>Wadado</h2>
                                </div>
                                <div>
                                    <p>
                                        Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut
                                    </p>
                                </div>
                                <div class="search-input">
                                    <div ng-cloak><span>{{selectedLocation}}</span></div>
                                    <div><img src="~/Images/Icons/search-icon.png" /></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="cd-bg-image-wrapper" data-image="images/Mobile/default">
                </div>
            </li>
        </ul>
    </section>
    <div class="uppercontent">
        <div class="column-12 top"></div>
        <!--Row start-->
        <div class="row">
            <div class="column-0">
                <img src="~/Images/Icons/offer_icon_mobile.png" />
            </div>
            <div class="column-6">
                <span>Top Offers of the Day</span>
            </div>
            <div class="column-1">
                <div class="button">
                    <a>More</a>
                </div>
            </div>
        </div>
        <!--Row end-->
        <!--Row start-->
        <!-- Slider Begin -->
        <div class="row">
            <div class="column-12">
                <div class="owl-carousel">
                    <div ng-repeat="item in topOffer">
                        <div class="item" ng-cloak>
                            <img data-u="image" ng-src="{{item.ImageURL}}">
                        </div>
                        <div class="imageDiv95">
                            <div class="leftDiv">
                                <p>
                                    <span>{{item.Activity.Name}}</span>
                                </p>
                                <p>
                                    <span>{{item.Activity.Address}}</span>
                                </p>
                            </div>
                            <div class="rightDiv">
                                <span>$ {{item.Activity.Cost}}</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Slider End -->
        <!--Row end-->
        <!--Row start-->
        <div class="row">
            <div class="column-0 ">
                <img src="~/Images/Icons/toptrending_mobile.png" />
            </div>
            <div class="column-6 ">
                <span>Top Trending Activities</span>
            </div>
            <div class="column-1 ">
                <div class="button">
                    <a>More</a>
                </div>
            </div>
        </div>
        <!--Row end-->
        <!--Row start-->
        <div class="row" ng-cloak>
            <div ng-repeat="item in topActivity">
                <div ng-if="$index == 0">
                    <div class="column-8">
                        <div class="crop-height">
                            <img ng-src="{{item.ImageURL}}">
                        </div>
                        <div class="imageDiv">
                            <div class="leftDiv">
                                <p>
                                    <span>{{item.Activity.Name}}</span>
                                </p>
                                <p>
                                    <span>{{item.Activity.Address}}</span>
                                </p>
                            </div>
                            <div class="rightDiv">
                                <span>$ {{item.Activity.Cost}}</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div ng-if="$index == 1">
                    <div class="column-4">
                        <div class="crop-height">
                            <img ng-src="{{item.ImageURL}}">
                        </div>
                        <div class="imageDiv">
                            <div class="leftDiv">
                                <p>
                                    <span>{{item.Activity.Name}}</span>
                                </p>
                                <p>
                                    <span>{{item.Activity.Address}}</span>
                                </p>
                            </div>
                            <div class="rightDiv">
                                <span>$ {{item.Activity.Cost}}</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--Row end-->
        <!--Row start-->
        <div class="row" ng-cloak>
            <!--Row start-->
            <div ng-repeat="item in topActivity">
                <div ng-if="$index > 1">
                    <div class="column-4">
                        <div class="crop-height">
                            <img ng-src="{{item.ImageURL}}">
                        </div>
                        <div class="imageDiv">
                            <div class="leftDiv">
                                <p>
                                    <span>{{item.Activity.Name}}</span>
                                </p>
                                <p>
                                    <span>{{item.Activity.Address}}</span>
                                </p>
                            </div>
                            <div class="rightDiv">
                                <span>$ {{item.Activity.Cost}}</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--Row end-->
        <!--Row start-->
        <div class="row" ng-cloak>
            <div class="column-12 lowercontent">
                <div class="header">
                    <span>Neque porro quisquam est qui dolorem ipsum quia dolor sit amet</span>
                </div>
                <div ng-repeat="item in latestNews">
                    <p>
                        {{item.Details}}
                    </p>
                    <p>
                        - {{item.Agency}}
                    </p>
                </div>
            </div>
        </div>
        <!--Row end-->
    </div>
</div>

