<script src="~/Scripts/Activities/services/ActivityDataService.js"></script>
<script src="~/Scripts/Activities/controllers/ActivityController.js"></script>
<link href="~/Content/phone.css" rel="stylesheet" />

<div id="colorbar">
</div>
<div class="cover"></div>
<div id="contentWrapper" data-ng-controller="ActivityController">
    <div>
        @Html.Partial("../Partial/_search")
    </div>
    <div>
        @Html.Partial("../Partial/_mobilemenu")
    </div>
    <div class="uppercontent" ng-cloak>
        <div>
            <!--Row start-->
            <div class="row">
                <div class="activity">
                    <span>{{ActivityType}}</span>
                </div>
            </div>
            <!--Row start-->
            <div class="row">
                <div ng-repeat="item in allSelectedActivity">
                    <div class="like-container">
                        @Html.Partial("../Partial/_favourites");
                    </div>
                    <div ng-click="loadActivityDetails(item)">
                        <div class="list-activity-wrapper">
                            <div>
                                <img ng-src="{{item.ImageURL}}" />
                            </div>
                            <div class="activityDetails">
                                <div>
                                    <span>{{item.Activity.Name}}</span>
                                </div>
                                <div>
                                    <span>INR {{item.Activity.Cost}}</span>
                                </div>
                            </div>
                            <div class="hairline-down-arrow">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--Row end-->
        </div>
    </div>
</div>