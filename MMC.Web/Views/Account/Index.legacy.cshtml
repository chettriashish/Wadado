@model MMC.Web.Model.AccountLoginModel
@{
    ViewBag.Title = "WADADO.IN";
}
<!--SLIDER REFERENCE-->
<script src="~/Scripts/slider/jssor.js"></script>
<script src="~/Scripts/slider/jssor.slider.js"></script>
<script src="~/Scripts/slider/slider.js"></script>

<!--UI SELECT REFERENCE-->
<link href="~/Content/ui-select/select.css" rel="stylesheet" />
<link href="~/Content/ui-select/select2.css" rel="stylesheet" />
<link href="~/Content/ui-select/select2-bootstrap.css" rel="stylesheet" />

<!--WADADO REFERENCE-->
<script src="~/Scripts/Video/video.js"></script>
<script src="~/Scripts/angular-ui/ui-select/select.js"></script>
<script src="~/Scripts/Common/services/SearchDataService.js"></script>
<script src="~/Scripts/Common/controllers/SearchController.js"></script>

<!--ACCOUNT REFERENCE-->
<script src="~/Scripts/Login/Model/AccountLoginModel.js"></script>
<script src="~/Scripts/Login/services/LoginDataService.js"></script>
<script src="~/Scripts/Login/controllers/LoginController.js"></script>

<!--MENU REFERENCE-->
<script src="~/Scripts/Common/services/MenuDataService.js"></script>
<script src="~/Scripts/Common/controllers/MenuController.js"></script>
<link href="~/Content/mobilemenu.css" rel="stylesheet" />
<link href="~/Content/phone.css" rel="stylesheet" />

<div id="colorbar">
</div>
<div class="cover"></div>
<div id="contentWrapper" data-ng-controller="LoginController" ng-init="returnUrl ='@Model.ReturnUrl'">
    <div>
        @Html.Partial("../Partial/_search")
    </div>
    <div>
        @Html.Partial("../Partial/_mobilemenu")
    </div>
    <div class="uppercontent">
        <div>
            <!--Row start-->
            <div class="row">
                <div class="column-12">
                    <div class="subHeaderCenter">
                        <span>Login</span>
                    </div>
                </div>
            </div>
            <!--Row end-->
            <!--Row start-->
            <div class="row">
                <div class="column-12">
                </div>
            </div>           
            <!--Row end-->
            <!--Row end-->
            <!--Row start-->
            <div class="row">
                <div class="column-12">
                    <span>&nbsp;</span>
                </div>
                <div class="column-12">
                    <span>&nbsp;</span>
                </div>
                <div class="column-12">
                    <div class="center-element-relative-table" ng-click="FBLogin()">                        
                        <div class="socialButtons">
                            <div>                                
                            </div>
                            <div>
                                <a id="facebook">Sign in with Facebook</a>
                            </div>                            
                        </div>
                    </div>
                </div>
            </div>
            <!--Row start-->
            <div class="row">
                <div class="column-12">
                    <span>&nbsp;</span>
                </div>
            </div>
            <!--Row end-->
            <div class="row">
                <div class="column-12">
                    <div class="center-element-relative-table">
                        <div id="customBtn" class="customGPlusSignIn">
                            <span class="icon"></span>
                            <span class="buttonText">Sign in with Google</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--Row end-->
        <!--Row start-->
        <div class="row">
            <div class="column-12">

            </div>
        </div>
        <!--Row end-->
        <!--Row start-->
        <div class="row" ng-if="AllowGuest == true" ng-cloak>
            <div class="column-12">
                <div class="subHeaderCenter">
                    <span>or</span>
                </div>
            </div>
        </div>
        <!--Row end-->
        <!--Row start-->
        <div class="row">
            <div class="column-12">

            </div>
        </div>
        <!--Row end-->
        <!--Row start-->
        <div class="row" ng-if="AllowGuest == true" ng-cloak>
            <div class="column-12">
                <div class="socialButtons">
                    <div>
                        <a ng-click="continueAsGuest()">Continue as Guest</a>
                    </div>                    
                </div>
            </div>
        </div>
        <div class="row">
            <div class="column-12">
                <span>&nbsp;</span>
            </div>
        </div>
        <!--Row end-->
    </div>
</div>
