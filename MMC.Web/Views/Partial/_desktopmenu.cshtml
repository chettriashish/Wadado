<div data-ng-controller="MenuController">
    <div id="navWrapper">
        <nav>
            <div class="clearfix primary-nav">
                <div ng-show="isDesktop" ng-cloak>
                    <div>
                        <div>
                            <img src="~/Images/Icons/location_nav.png" />
                        </div>
                        <div><span>{{selectedLocation}}</span></div>
                        <div class="bottom-triangle"></div>
                    </div>
                    <div data-ng-controller="SearchController">
                        <div ng-repeat="(key, value) in locationResults" class="row">
                            <ul>
                                <li>
                                    {{key}}
                                    <ul>
                                        <li ng-repeat="item in value">
                                            <a>{{item.LocationName}}</a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div ng-show="isDesktop" data-ng-controller="SearchController" ng-cloak>
                    <div>
                        <div><span>{{activityName}}</span></div>
                        <div class="bottom-triangle"></div>
                    </div>
                    <div class="row">
                       <div>
                           <ul>
                               <li ng-repeat="(key, value) in activityResults"><a>{{key}}</a></li>
                           </ul>
                       </div>
                    </div>
                </div>
            </div>          
            <button class="logo-button">Logo Button</button>
        </nav>
    </div>
</div>
