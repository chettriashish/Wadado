<div data-ng-controller="MenuController">
    <div id="navWrapper">
        <nav>
            <div class="clearfix primary-nav" data-ng-controller="SearchController">
                <div ng-show="isDesktop" ng-cloak>
                    <div>
                        <div>
                            <img src="~/Images/Icons/nav_location_icon.png" />
                        </div>
                        <div><span>{{selectedLocation}}</span></div>
                        <div class="bottom-triangle"></div>
                    </div>
                    <div>
                        <div ng-repeat="(key, value) in locationResults" class="row">
                            <ul>
                                <li>
                                    {{key}}
                                    <ul>
                                        <li ng-repeat="item in value">
                                            <a ng-click="loadSelectedLocationDetails(item, null)">{{item.LocationName}}</a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div ng-cloak>
                    <div ng-show="isLocationSelected">
                        <div><span>{{activityName}}</span></div>
                        <div class="bottom-triangle"></div>
                    </div>
                    <div class="row" ng-show="isLocationSelected">
                        <div>
                            <ul>
                                <li ng-repeat="(key, value) in activityResults">
                                    <ul>
                                        <li ng-repeat="item in value">
                                            <a ng-click="loadInLocationSelectedActivityCategory(key)">{{item.ActivityCategory}}</a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div>
                    <div id="checkout" ng-show="ActivityInCart()">
                        <div ng-click="showCart()">
                            <div class="column-auto-nospace">
                                <img src="~/Images/Icons/nav_cart_icon.png" />
                            </div>
                            <div class="column-auto-nospace">
                                <div class="balloon">{{ActivityCount}}</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <button class="logo-button">Logo Button</button>
        </nav>
    </div>
</div>
